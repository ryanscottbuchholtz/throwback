<div class="border-form-div">

<h2>sign in</h2><br>

<%= simple_form_for(resource, as: resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.email_field :email, label: 'e-mail', required: false, autofocus: true, placeholder: 'e-mail' %>
    <%= f.password_field :password, label: 'password', required: false, placeholder: 'password' %>
    <div class="col-sm-offset-0 col-sm-0">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
  </div><br>
  <div class="form-actions">
    <%= f.button :submit, "sign in", :class => "btn btn-primary" %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>

</div>
