<div class="border-form-div">
<h2>sign up</h2><br>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

    <%= f.text_field :first_name, required: true, placeholder: 'first name' %>
    <%= f.text_field :last_name, required: true, placeholder: 'last name' %>
    <%= f.email_field :email, required: true, placeholder: 'e-mail address' %>
    <%= f.password_field :password, required: true, placeholder: 'password' %>
    <%= f.password_field :password_confirmation, required: true, placeholder: 're-enter password' %>
    <%= f.input :birth_month, label: 'month', collection: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'] %>
    <%= f.input :birth_day, label: 'day', collection: 1..31 %>
    <%= f.input :birth_year, label: 'year', collection: 1930..2000 %>
    <%= f.input :gender, label: 'gender', collection: ['Male', 'Female', 'Prefer not to say'] %>
<br>

    <%= f.button :submit, "sign up" %>
<br>

  <%= link_to 'return home', root_path %>
<% end %>

<%= render "devise/shared/links" %>

</div>
