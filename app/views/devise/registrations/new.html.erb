<div class="border-form-div">
<h2>Sign Up</h2><br>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :first_name, label: false, required: true, placeholder: 'First Name' %>
    <%= f.input :last_name, label: false, required: true, placeholder: 'Last Name' %>
    <%= f.input :email, label: false, required: true, placeholder: 'E-mail address' %>
    <%= f.input :password, label: false, required: true, placeholder: 'Password' %>
    <%= f.input :password_confirmation, label: false, required: true, placeholder: 'Re-enter Password' %>
<br>

    <%= f.button :submit, "Sign Up", :class => "btn btn-primary" %>
<br>

  <%= link_to 'Return Home', root_path %>
<% end %>

<%= render "devise/shared/links" %>

</div>
