<div class="container" id="wrap">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <legend>Sign Up</legend>
             <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>            
            <div class="row">
              <div class="col-xs-6 col-md-6">
                <%= f.input_field :first_name, label: false, required: true, placeholder: 'First Name', :class =>"form-control input-lg"%>
              </div>
              <div class="col-xs-6 col-md-6">
                 <%= f.input_field :last_name, label: false, required: true, placeholder: 'Last Name', :class =>"form-control input-lg" %>
              </div>               
            </div>
            <%= f.input_field :email, label: false, required: true, placeholder: 'Your E-mail', :class =>"form-control input-lg" %>
            <%= f.input_field :password, label: false, required: true, placeholder: 'Unique Password', :class =>"form-control input-lg" %>
            <%= f.input_field :password_confirmation, label: false, required: true, placeholder: 'Confirm Password', :class =>"form-control input-lg" %> 
            <br>     
            
            <div class="row">
              <label>Birth Date</label>
            </div>                 
            <br>
            <div class="row">
              
              <div class="col-xs-4 col-md-4">
                <%= f.input_field :birth_month, collection: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'], prompt: 'Month', :class =>"form-control input-lg" %>
              </div>
              
              <div class="col-xs-4 col-md-4">
                <%= f.input_field :birth_day, collection: 1..31, prompt: 'Day', :class =>"form-control input-lg" %> 
              </div>
              
              <div class="col-xs-4 col-md-4">
                <%= f.input_field :birth_year, collection: 1935..2014, prompt: 'Year', :class =>"form-control input-lg" %> 
              </div>
            </div>

            <br />
            <span class="help-block">By clicking Create my account, you agree to our Terms and that you have read our Data Use Policy, including our Cookie Use.</span>
            <div class="row">
              <div class="col-md-6">
              <%= f.button :submit, 'Create my Account', :class =>"btn btn-lg btn-primary btn-block signup-btn" %>
              </div>
            </div>
            </form>
            <% end %>          
          </div>
        </div>            
    </div>
</div>