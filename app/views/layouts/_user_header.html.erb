<div class="container">
  <div class="masthead">
    <h3 class="text-muted"><%= link_to "Throwback", root_path%></h3>
      <div class="form-inline pull-right">
        <% unless user_signed_in? %>
            <%= simple_form_for(resource, as: resource_name, :url => session_path(resource_name)) do |f| %>
            <% devise_error_messages! %>

              <div class="form-group">
                <%= f.email_field :email, label: 'e-mail', required: false, autofocus: true, placeholder: 'enter e-mail', class: "form-control" %>
              </div>
              
              <div class="form-group">      
                <%= f.password_field :password, label: 'password', required: false, placeholder: 'enter password', class: "form-control" %>
              </div>
              
              <div class="form-group">
                <%= f.button :submit, "Sign In", class: "form-control btn btn-primary pull-right" %>
              </div> 

          </div>
                 
          <% end %>
          <% end %>
      <ul class="nav nav-justified">
          <% if user_signed_in? %>
        <li><%= link_to "Dashboard", dashboard_index_path %></li>
          <% else %>
        <li><%= link_to "Home", root_path %></li>
          <% end %>
        <li><%= link_to "Blog", 'http://ryanscottbuchholtz.blogspot.com' %></li>
        <li><%= link_to "Testimonials", testimonials_path %></li>
        <li><%= link_to "Example", samples_path %></li>
        <li><%= link_to "Contact Us", new_contact_path %></li>
          <% if user_signed_in? %>
        <li><%= link_to "Timeline", memories_path(current_user) %></li>
        <li><%= link_to current_user.full_name, user_path(current_user) %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
        </ul>

                   
          <% end %>
  </div>



