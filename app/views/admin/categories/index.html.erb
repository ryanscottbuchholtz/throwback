<table class="table table-striped">
  <thead>
    <td><h1>Category - <%= link_to 'New Category', new_category_path %></h1></td>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to "Edit", edit_category_path(category) %></td>
          <td><%= link_to "Remove", category, method: :delete, data: {confirm: "Are you sure?" } %>
        </tr>
        <% end %>
      <tbody>
</table>