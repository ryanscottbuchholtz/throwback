<table class="table table-striped">
  <thead>
    <td><h1>Category - <%= link_to 'New Category', new_admin_category_path %></h1></td>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.id %></td>
          <td><%= link_to "Edit", edit_admin_category_path(category) %></td>
          <td><%= button_to "Remove", admin_category_path(category), method: :delete, data: {confirm: "Are you sure?" } %>
        </tr>
        <% end %>
        <%= link_to "Admin Home", admin_root_path %>
      <tbody>
</table>