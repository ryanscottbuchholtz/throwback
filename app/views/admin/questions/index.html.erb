<table class="table table-striped">
  <thead>
    <td><h1>Questions - <%= link_to 'New Question', new_admin_question_path %></h1></td>
      <tbody>
        <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.question %></td>
          <td><%= question.category.name %></td>
          <td><%= link_to "Edit", edit_admin_question_path(question) %></td>
          <td><%= button_to "Remove", admin_question_path(question), method: :delete, data: {confirm: "Are you sure?" } %>
        </tr>
        <% end %>
      <tbody>
        <%= link_to "Admin Home", admin_root_path %>
</table>

<%= will_paginate @questions, renderer: BootstrapPagination::Rails %>