<div class="border-form-div">
  <h1>Edit Question</h1>

<%= simple_form_for(@question) do |f| %>
  <div class="form-inputs">
    <%= f.input :question, label: false, autofocus: true %>
  </div><br>
  <div class="btn-group">
    <%= link_to "Cancel", questions_path, :class => "btn btn-primary" %>
    <%= f.button :submit, "Update", :class => "btn btn-primary" %>
  </div>
<% end %>
<br>

</div>